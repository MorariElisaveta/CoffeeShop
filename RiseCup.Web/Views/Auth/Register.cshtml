<style>
    .form-signup
    {
        padding: 60px;
    }
</style>

<div class="form-signup bg-light shadow p-4 rounded">
    <h2 class="form-register-heading text-center mb-4">Registration</h2>
    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        <div class="form-group">
            <label for="username" class="visually-hidden">Username</label>
            <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Username" required autofocus>
            <div class="invalid-feedback">Please enter your username.</div>
        </div>
        <div class="form-group">
            <label for="password" class="visually-hidden">Password</label>
            <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="Password" required>
            <div class="invalid-feedback">Please enter your password.</div>
        </div>
        <button class="btn btn-lg btn-success btn-block" type="submit">Register</button>
        <div class="text-center mt-3">
            <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">Already have an account? Sign in.</a>
        </div>
    }
</div>

<script>
    // JavaScript for form validation using Bootstrap
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Get all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission when there are invalid fields
            Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
