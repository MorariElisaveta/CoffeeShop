@model RiseCup.Domain.Models.Order

@{
    ViewBag.Title = "Delete Order";
    Layout = "../Shared/_AdminLayout.cshtml";

}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Order Date</dt>
        <dd>@Html.DisplayFor(model => model.OrderDate)</dd>
        <dt>User</dt>
        <dd>@Html.DisplayFor(model => model.User.Username)</dd>
        <dt>Total Amount</dt>
        <dd>@Html.DisplayFor(model => model.TotalAmount)</dd>
        <dt>Status</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>
    </dl>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "Index")
        </div>
    }
</div>