<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - My ASP.NET Application</title>
  <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
  <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.css" />
  <link href="https://fonts.googleapis.com/css?family=Lobster|Poppins:400,600,700&display=swap" rel="stylesheet">
  <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
  <link href="~/Content/css/style.css" rel="stylesheet" />
  <link href="~/Content/css/responsive.css" rel="stylesheet" />
</head>
<body>
<header class="header_section">
  <div class="container">
    <nav class="navbar navbar-expand-lg custom_nav-container">
      <a class="navbar-brand" href="@Url.Action("Index", "Home")">
        <img src="~/Content/images/logo.png" style="height: auto; width: 100px;"/>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="s-1"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="d-flex ml-auto flex-column flex-lg-row align-items-center">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Products", "Home")">Products</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link last_link" href="@Url.Action("Testimonial", "Home")">Testimonial</a>
            </li>
            @if (!User.Identity.IsAuthenticated)
            {
              <li class="nav-item active">
                <a class="nav-link last_link" href="@Url.Action("Login", "Auth")">Login</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link last_link" href="@Url.Action("Register", "Auth")">Register</a>
              </li>
            }
            else
            {
              <li class="nav-item active">
                <a class="nav-link last_link" href="@Url.Action("Logout", "Auth")">Logout</a>
              </li>
              if (User.IsInRole("Administrator"))
              {
                <a class="nav-link last_link" href="@Url.Action("Index", "Orders")">Orders</a>
              }
            }
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
<!-- end header section -->
@RenderBody()
<!-- footer section -->
<section class="container-fluid footer_section">
  <div class="container">
    <p>
      &copy; <span id="currentDate"></span> All Rights Reserved By
      <a href="https://html.design/">Free Html Templates</a>
    </p>
  </div>
</section>
<!-- footer section -->

<script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
  </script>
<script type="text/javascript" src="~/Scripts/custom.js"></script>
</body>
</html>

<style>
  .footer_section {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px; /* Задаём высоту футера */
    text-align: center;
    line-height: 50px; /* Высота строки равна высоте футера для вертикального центрирования текста */
  }
</style>